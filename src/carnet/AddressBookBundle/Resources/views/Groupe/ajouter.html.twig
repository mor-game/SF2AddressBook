{% extends "carnetAddressBookBundle::base.html.twig" %}
{% import "carnetAddressBookBundle::bootstrap.html.twig" as bootstrap%}

{% block title %}Carnet d'adresse{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('bundles/carnetaddressbook/js/select2-3.5.1/select2.css')}}">
    <link rel="stylesheet" href="{{ asset('bundles/carnetaddressbook/js/select2-3.5.1/select2-bootstrap.css')}}">

    <style>
        .help-block ul {
            list-style: none;
            padding-left: 0;
        }
    </style>

  
{% endblock %}

{% block contenu %}
<h2>Ajouter un groupe:</h2>

{#{{form(form)}}#}

{{form_start(form, {'attr':{'class':'form-horizontal', 'role':'form', 'novalidate':''} })}}

{{bootstrap.formGroup(form.nom, 'Nom')}}
{{bootstrap.formGroup(form.description, 'Description')}}

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        {{form_widget(form.save, {'attr':{'class':'btn btn-primary'} }) }}
    </div>
</div>

{{form_end(form)}}

{% endblock %}
